<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#ffffff" >

    <ImageView
        android:id="@+id/bags_one"
        android:layout_width="145dp"
        android:layout_height="170dp"

        android:layout_alignParentRight="true"
        android:src="@drawable/bags" />

    <ImageView
        android:id="@+id/bag_two"
        android:layout_width="145dp"
        android:layout_height="170dp"

        android:layout_alignParentRight="true"
        android:src="@drawable/bag_two" />

    <ImageView
        android:id="@+id/man"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/shoes_two"
        android:layout_alignTop="@+id/bags_one"
        android:src="@drawable/man" />

    <ImageView
        android:id="@+id/woman"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/man"
        android:layout_alignTop="@+id/man"
        android:src="@drawable/woman" />

    <ImageView
        android:id="@+id/shoes_two"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/watch"
        android:layout_below="@+id/man"
        android:layout_marginLeft="13dp"
        android:src="@drawable/shoes_two"
        android:layout_toStartOf="@+id/search_button" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="67dp"
        android:src="@drawable/zappos"
        android:layout_alignBottom="@+id/shoes_two"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/shoes_one"
        android:layout_width="75dp"
        android:layout_height="95dp"
        android:src="@drawable/shoes_one"
        android:layout_below="@+id/search_button"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/watch"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignBottom="@+id/shoes_one"
        android:layout_alignLeft="@+id/export_text"
        android:layout_marginBottom="29dp"
        android:src="@drawable/watch" />

    <ImageView
        android:id="@+id/gloves"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/watch"
        android:layout_alignTop="@+id/watch"
        android:src="@drawable/gloves" />

    <ImageView
        android:id="@+id/hat"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/hat"
        android:layout_alignTop="@+id/watch"
        android:layout_toEndOf="@+id/shoes_one" />

    <ImageView
        android:id="@+id/export_text"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_alignRight="@+id/bags_one"
        android:layout_below="@+id/imageView1"
        android:layout_marginRight="7dp"
        android:src="@drawable/export_text" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/buttonshape"
        android:text="Start!"
        android:textColor="#ffffff"
        android:layout_below="@+id/export_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All images are property of Zappos.com"
        android:id="@+id/property"
        android:layout_below="@+id/shoes_one"
        android:layout_centerHorizontal="true" />

</RelativeLayout>